{
  "python.pythonPath": ".venv/bin/python",
  "python.formatting.provider": "black",
  "editor.formatOnSave": true,
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "results/": true
  }
}
{
    // Exclude virtualenv from file watching, UI and search
    "files.watcherExclude": {
        "**/.venv/**": true
    },
    "files.exclude": {
        "**/.venv/**": true
    },
    "search.exclude": {
        "**/.venv/**": true
    },

    // Python settings
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
}


