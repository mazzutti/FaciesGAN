{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Launch FaciesGAN (debugpy)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "subProcess": true,
      "redirectOutput": true,
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "--input-path",
        "data",
        "--output-path",
        "results/py/",
        "--num-train-pyramids",
        "1",
        "--batch-size",
        "1",
        "--num-workers",
        "0",
        "--num-iter",
        "200",
        "--num-parallel-scales",
        "7",
        "--discriminator-steps",
        "3",
        "--generator-steps",
        "3",
        "--alpha",
        "10",
        "--scale0-noise-amp",
        "1.5",
        "--min-noise-amp",
        "0.3",
        "--lambda-diversity",
        "1.0",
        "--no-tensorboard",
        "--use-wells",
        "--use-seismic",
        "--use-mlx",
        "--compile-backend"
        // "--use-profiler"
      ]
    },
    {
      "name": "C: Launch FaciesGAN (lldb)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/faciesgan",
      "preLaunchTask": "Build FaciesGAN",
      "args": [
        "--input-path",
        "data",
        "--output-path",
        "results/c/",
        "--num-train-pyramids",
        "1",
        "--batch-size",
        "1",
        "--num-workers",
        "0",
        "--num-iter",
        "200",
        "--num-parallel-scales",
        "7",
        "--discriminator-steps",
        "3",
        "--generator-steps",
        "3",
        "--alpha",
        "10",
        "--scale0-noise-amp",
        "1.5",
        "--min-noise-amp",
        "0.3",
        "--lambda-diversity",
        "1.0",
        "--no-tensorboard",
        "--use-wells",
        "--use-seismic",
        "--use-mlx",
        "--compile-backend"
      ],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NUM_STEPS": "200",
        "OUTPUT_PATH": "${workspaceFolder}/results/"
      },
      "stopOnEntry": false,
      "terminal": "integrated"
    }
  ],
}
