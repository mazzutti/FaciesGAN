{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Launch FaciesGAN (debugpy)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "subProcess": true,
      "redirectOutput": true,
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "--input-path",
        "data",
        "--output-path",
        "results/",
        "--num-train-pyramids",
        "1",
        "--batch-size",
        "1",
        "--num-workers",
        "2",
        "--num-iter",
        "2000",
        "--num-parallel-scales",
        "7",
        "--alpha",
        "10",
        "--scale0-noise-amp",
        "1.5",
        "--min-noise-amp",
        "0.3",
        "--lambda-diversity",
        "1.0",
        "--no-tensorboard",
        "--use-wells",
        "--use-seismic",
        "--use-mlx",
        "--compile-backend"
        // "--use-profiler"
      ]
    }
  ]
}
