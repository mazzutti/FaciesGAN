{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Launch FaciesGAN (debugpy)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "subProcess": true,
      "redirectOutput": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/.venv/lib/python3.13/site-packages:${workspaceFolder}/build/_deps/mlx-src/python:${workspaceFolder}/mlx-c/python",
        "PYTHONEXECUTABLE": "${workspaceFolder}/.venv/bin/python",
        "VIRTUAL_ENV": "${workspaceFolder}/.venv",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}",
        "FG_INSTRUMENT_LOKY": "1",
        "PYTHONWARNINGS": "ignore::UserWarning"
      },
      "args": [
        "--input-path",
        "data",
        "--output-path",
        "results/py/",
        "--num-train-pyramids",
        "1",
        "--batch-size",
        "1",
        "--num-workers",
        "0",
        "--num-iter",
        "100",
        "--num-parallel-scales",
        "7",
        "--discriminator-steps",
        "3",
        "--generator-steps",
        "3",
        "--alpha",
        "10",
        "--scale0-noise-amp",
        "1.5",
        "--min-noise-amp",
        "0.3",
        "--lambda-diversity",
        "1.0",
        "--no-tensorboard",
        "--use-wells",
        "--use-seismic",
        "--use-mlx",
        // "--compile-backend"
      ]
    },
    {
      "name": "Python: Attach FaciesGAN (debugpy)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "127.0.0.1",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${workspaceFolder}"
        }
      ],
      "justMyCode": false
    },
    {
      "name": "C: Launch FaciesGAN (lldb)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/faciesgan",
      "preLaunchTask": "Build FaciesGAN",
      "args": [
        "--input-path",
        "data",
        "--output-path",
        "results/c/",
        "--num-train-pyramids",
        "1",
        "--batch-size",
        "1",
        "--num-workers",
        "0",
        "--num-iter",
        "100",
        "--num-parallel-scales",
        "7",
        "--discriminator-steps",
        "3",
        "--generator-steps",
        "3",
        "--alpha",
        "10",
        "--scale0-noise-amp",
        "1.5",
        "--min-noise-amp",
        "0.3",
        "--lambda-diversity",
        "1.0",
        "--no-tensorboard",
        "--use-wells",
        "--use-seismic",
        "--use-mlx",
        "--compile-backend"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "NUM_STEPS": "200",
        "OUTPUT_PATH": "${workspaceFolder}/results/",
        "PYTHONPATH": "${workspaceFolder}/.venv/lib/python3.13/site-packages:${workspaceFolder}/build/_deps/mlx-src/python:${workspaceFolder}/mlx-c/python",
        "PYTHONEXECUTABLE": "${workspaceFolder}/.venv/bin/python",
        "VIRTUAL_ENV": "${workspaceFolder}/.venv",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
      },
      "stopOnEntry": false,
      "terminal": "integrated",
      "initCommands": [
        "settings set target.max-children-count 256",
        "settings set target.max-string-summary-length 512"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Parallel: Python + C (with dumps)",
      "preLaunchTask": "prepare-parallel-dumps",
      "configurations": [
        "Python: Launch FaciesGAN (debugpy)",
        "C: Launch FaciesGAN (lldb)"
      ]
    }
  ]
}
